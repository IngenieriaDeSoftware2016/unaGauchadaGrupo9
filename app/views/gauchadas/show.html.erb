<h1>Gauchada</h1><p class="byline" style="text-align: left; font-weight: bold;">
    <i><%= @gauchada.estado %></i>
</p>
<%if !current_usuario.nil? && @gauchada.estado!="en proceso" %>
<%if current_usuario.id==@gauchada.usuario_id%>
Editar:
<%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_gauchada_path(@gauchada), class: 'btn btn-warning'%>
Ver Postulantes
<%= link_to '<i class="glyphicon glyphicon-th-list"></i>'.html_safe, gauchadas_postulantes_path(@gauchada), class: 'btn btn-success'%>
<% end %>
<%if((@gauchada.postulante_ids & current_usuario.postulante_ids).empty? && @gauchada.usuario_id!=current_usuario.id)%>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Postularme
</button>
<% end %>
<% end %>
<%if @gauchada.estado=="en proceso" %>
<%= link_to '<i class="glyphicon glyphicon-ok">Resuelta</i>'.html_safe, under_construction_path, class: 'btn btn-success'%>
<%= link_to '<i class="glyphicon glyphicon-remove">Rechazar</i>'.html_safe, under_construction_path, class: 'btn btn-danger'%>
<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Postulacion</h4>
            </div>
            <div class="modal-body">
                <%= render 'form_postulacion', gauchada: @gauchada %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No, mejor no</button>
            </div>
        </div>
    </div>
</div>

</br>
<img class="img-responsive" src="https://s22.postimg.org/cs5ohupgx/logo.png" alt="">

