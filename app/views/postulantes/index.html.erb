                <%u=Usuario.find(p.gauchada.usuario_id)%>
                <td><%= u.nombre %>: </td>
                <td><%= truncate(p.gauchada.descripcion, length: 50) %></td>
                </br>
                </br>
                <%= link_to '<i class="glyphicon glyphicon-ok"> Ver mas</i>'.html_safe, gauchada_path(p.gauchada), class: 'btn btn-success'%>
              </div>
            </div>
            <%end%>
          </div>
          <div class="tab-pane" id="finalizadas">
            <% @postulaciones_finalizadas.each do |p| %>
            <div class="col-lg-4 col-md-4 col-xs-6 thumb">
              <a class="thumbnail">
                <img class="img-responsive" style="width: 200px; height: 200px" src="<%=p.gauchada.imagen%>" alt="">
              </a>
              <div class = "caption" style="width: 200px; height: 200px">
                <%u=Usuario.find(p.gauchada.usuario_id)%>
                <td><%= u.nombre %>: </td>
                <td><%= truncate(p.gauchada.descripcion, length: 50) %></td>
                </br>
                </br>
                <%= link_to '<i class="glyphicon glyphicon-ok"> Ver mas</i>'.html_safe, gauchada_path(p.gauchada), class: 'btn btn-success'%>
              </div>
            </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
