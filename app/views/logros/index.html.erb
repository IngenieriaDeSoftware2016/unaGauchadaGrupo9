<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Puntaje</th>
      <th>Editar</th>
      <th>Borrar</th>
    </tr>
  </thead>
  <tbody>
    <% Logro.all.each do |l| %>
    <tr>
    <!--<th scope="row"><%= l.id %></th>-->
    <td><%= l.nombre %></td>
    <td><%= l.puntaje %></td>
    <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i> Edit'.html_safe, edit_logro_path(l), class: 'btn btn-default'%></td>
    <td><%= link_to '<i class="glyphicon glyphicon-remove"></i> Borrar'.html_safe, l, method: :delete, :class => 'button'%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Crear', new_logro_path, :class => 'button'%>
