<h2>Crear Logro</h2>

<%= bootstrap_form_for(@logro) do |l| %>

<div class="field">
  <!-- <%= l.label :nombre %><br /> -->
  <%= l.text_field :nombre,required: true, autofocus: true %>
</div>

<div class="field">
  <!-- <%= l.label :puntaje %><br /> -->
  <%= l.number_field :puntaje,min: 0,required: true, autofocus: true %>
</div>


<!--  <div class="actions">
    <%= l.submit "Crear" %>
  </div>

<%= link_to "Volver", :back %>-->
<%= button_to 'Crear', logro_path(l), class: 'btn btn-primary'%>
<% end %>
