<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<div class="field">
  <%= f.label :Email %><br />
  <%= f.email_field :email, autofocus: true,required: true %>
</div>

<div class="field">
  <%= f.label :Nombre %><br />
  <%= f.text_field :nombre, autofocus: true ,required: true%>
</div>

<div class="field">
  <%= f.label :Edad %><br />
  <%= f.number_field :edad, min: 18, max: 120, autofocus: true,required: true %>
</div>

<div class="field">
  <%= f.label :Localidad %><br />
  <%= f.text_field :localidad, autofocus: true ,required: true%>
</div>

<div class="field">
  <%= f.label :Telefono %><br />
  <%= f.phone_field :telefono, autofocus: true ,required: true%>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Contrase単a %> <i>(dejar en blanco si no se quiere cambiar)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres como minimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Repetir_Contrase単a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Contrase単a_Actual %> <i>(se necesita la contrase単a actual para guardar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<%= link_to "Volver", :back %>
