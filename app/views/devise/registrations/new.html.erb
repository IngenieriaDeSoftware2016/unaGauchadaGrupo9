<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true,required: true %>
  </div>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :nombre, autofocus: true ,required: true%>
  </div>

  <div class="field">
    <%= f.label :Edad %><br />
    <%= f.number_field :edad, min: 18, max: 120, autofocus: true,required: true %>
  </div>

  <div class="field">
    <%= f.label :Localidad %><br />
    <%= f.text_field :localidad, autofocus: true ,required: true%>
  </div>

  <div class="field">
    <%= f.label :Telefono %><br />
    <%= f.phone_field :telefono, autofocus: true ,required: true%>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres como minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,required: true%>
  </div>

  <div class="field">
    <%= f.label :Repetir_Contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",required: true %>
  </div>

  <div class="field">
    <%= f.hidden_field :admin, :value => false%>
  </div>

  <div class="field">
    <%= f.hidden_field :puntaje, :value => 0%>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= link_to "Volver", :back %>

<%= render "devise/shared/links" %>
